		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>pageTitlePatients}" />
				</f:heading>
				<f:actions>
					<Button text="{i18n>createPatientFromBMP}" press="onPressCreatePatientFromBMP" />
