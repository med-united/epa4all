<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:html="http://www.w3.org/1999/xhtml"
>

  <Dialog
    title="{ parts: ['i18n>titleScanDialog', 'scanModel>/type'], formatter: 'jQuery.sap.formatMessage'}"
    showHeader="true"
    class="sapUiContentPadding"
  >
    <content>
      <Input
        value="{scanModel>/value}"
        placeholder="{i18n>placeholderInput}"
      />
      <Text text="{i18n>textInputDialog}" />
    </content>
    <beginButton>
      <Button
        text="{i18n>textOkButton}"
        icon="sap-icon://accept"
        press="onOkPress"
      />
    </beginButton>
    <endButton>
      <Button
        text="{i18n>textCancelButton}"
        icon="sap-icon://decline"
        press="onCancelPress"
      />
    </endButton>
  </Dialog>
</core:FragmentDefinition>